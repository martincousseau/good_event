extends layout

block content
  form(method='POST' action='/login')
    div.form-group
      label(for='email') Email:
      input#login.form-control(type='text' name='email' required='true')

    div.form-group
      label(for='password') Mot de passe:
      input#password.form-control(type='text' name='password' required='true')

    button.btn.btn-primary(type='submit') Valider

